// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator kysely {
  provider  = "prisma-kysely"
  camelCase = true
  output    = "../src/modules/database"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/data.db"
}

model Plan {
  id         Int     @id @default(autoincrement())
  name       String
  color      String
  sort       Int     @default(0)
  deleted_at Int     @default(0)
  labels     Label[]
  notes      Note[]

  @@unique([name, deleted_at])
  @@unique([color, deleted_at])
  @@map("plan")
}

model Label {
  id         Int    @id @default(autoincrement())
  name       String
  color      String
  sort       Int    @default(0)
  plan_id    Int
  deleted_at Int    @default(0)
  plan       Plan   @relation(fields: [plan_id], references: [id])
  notes      Note[]

  @@unique([name, deleted_at])
  @@unique([color, deleted_at])
  @@map("label")
}

model Note {
  id         Int   @id @default(autoincrement())
  start      Int
  end        Int
  plan_id    Int
  label_id   Int
  deleted_at Int   @default(0)
  plan       Plan  @relation(fields: [plan_id], references: [id])
  label      Label @relation(fields: [label_id], references: [id])

  @@map("note")
}

model Program {
  id         Int        @id @default(autoincrement())
  name       String
  color      String
  path       String
  icon       String
  sort       Int        @default(0)
  deleted_at Int        @default(0)
  activities Activity[]

  @@unique([name, deleted_at])
  @@unique([color, deleted_at])
  @@unique([path, deleted_at])
  @@map("program")
}

model Activity {
  id         Int     @id @default(autoincrement())
  start      Int
  end        Int
  program_id Int
  deleted_at Int     @default(0)
  program    Program @relation(fields: [program_id], references: [id])

  @@map("activity")
}

model Moment {
  id         Int    @id @default(autoincrement())
  time       Int
  title      String
  content    String
  deleted_at Int    @default(0)

  @@unique([title, deleted_at])
  @@map("moment")
}

model Overview {
  id         Int    @id @default(autoincrement())
  type       Int
  x          Int
  y          Int
  w          Int
  h          Int
  data       String
  deleted_at Int    @default(0)

  @@map("overview")
}
