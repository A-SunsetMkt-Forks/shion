{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "shion",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "identifier": "hanaTsuk1.shion",
      "publisher": "hanaTsuk1",
      "targets": [
        "nsis",
        "updater"
      ],
      "windows": {
        "nsis": {
          "languages": [
            "English",
            "SimpChinese"
          ],
          "installerIcon": "icons/icon.ico"
        }
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/hanaTsuk1/shion/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMyMzU3MEI3QTAyNjZDQTIKUldTaWJDYWd0M0ExTW5uMEZ3MWtsVEE1WTFHWVBYY24zSlZvb0RZdjVVVlRySng4U2VtRDVmQkcK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "title": "shion",
        "width": 1056,
        "height": 594
      }
    ]
  }
}
