{
  "productName": "shion-dev",
  "version": "../package.json",
  "identifier": "hanaTsuk1.shion.dev",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": [
          "English",
          "SimpChinese"
        ]
      }
    },
    "publisher": "hanaTsuk1",
    "copyright": "Copyright Â© 2024 shion-app",
    "targets": [
      "nsis",
      "updater",
      "app"
    ],
    "licenseFile": "../LICENSE"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/shion-app/shion/releases/latest/download/latest.json"
      ],
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUyRTE2OTkxRUY3NkNDQzIKUldUQ3pIYnZrV25oNGl2TUM2eU5lWVdMYWIzOFpOa2ZJZnMzOXRObGI4L3p4b3d6S0Nid3ZIR1cK"
    }
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**"
        ]
      },
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "center": true,
        "decorations": false,
        "fullscreen": false,
        "height": 648,
        "resizable": false,
        "title": "shion",
        "width": 1152
      }
    ]
  }
}
