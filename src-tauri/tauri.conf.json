{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "shion-dev",
    "version": "../package.json"
  },
  "plugins": {
    "fs": {
      "scope": [
        "$APPDATA/**"
      ]
    },
    "shell": {
      "open": true
    },
    "updater": {
      "endpoints": [
        "https://github.com/hanaTsuk1/shion/releases/latest/download/latest.json"
      ]
    }
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "hanaTsuk1.shion.dev",
      "publisher": "hanaTsuk1",
      "targets": [
        "nsis",
        "updater",
        "app"
      ],
      "updater": {
        "active": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUyRTE2OTkxRUY3NkNDQzIKUldUQ3pIYnZrV25oNGl2TUM2eU5lWVdMYWIzOFpOa2ZJZnMzOXRObGI4L3p4b3d6S0Nid3ZIR1cK"
      },
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "languages": [
            "English",
            "SimpChinese"
          ]
        }
      }
    },
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**"
        ]
      },
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost data: blob:; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost"
    },
    "trayIcon": {
      "iconAsTemplate": true,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": false
    },
    "windows": [
      {
        "center": true,
        "decorations": false,
        "fileDropEnabled": false,
        "fullscreen": false,
        "height": 648,
        "resizable": false,
        "title": "shion",
        "width": 1152
      }
    ]
  }
}
